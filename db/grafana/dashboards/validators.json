          "editorMode": "code",
          "format": "table",
          "rawQuery": true,
          "rawSql": "SELECT\n  HEADERS.BLOCK_TIME as \"time\",\n  '0x' || ENCODE(VALIDATOR_STATE.NODE :: BYTEA, 'hex') AS NODE,\n  VALIDATOR_STATE.STATE\nFROM\n  HEADERS\n  LEFT JOIN PENDING_VALIDATOR_STATE_EVENT VALIDATOR_STATE ON '0x' || ENCODE(VALIDATOR_STATE.NODE :: BYTEA, 'hex') IN ($validators)\n  AND (\n    VALIDATOR_STATE.on_enter_block_number <= headers.block_number\n    and (\n      (VALIDATOR_STATE.on_exit_block_number is null)\n      or (headers.block_number <= VALIDATOR_STATE.on_exit_block_number)\n    )\n  )\nWHERE\n  $__timeFilter(HEADERS.BLOCK_TIME)\nORDER BY\n  HEADERS.BLOCK_NUMBER DESC",
